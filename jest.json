{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node",
  "moduleNameMapper": {
    "@app/(.*)$": "<rootDir>/src/app/$1",
    "@domain/(.*)$": "<rootDir>/src/domain/$1",
    "@infra/(.*)$": "<rootDir>/src/infra/$1",
    "@ui/(.*)$": "<rootDir>/src/ui/$1",
    "@test/(.*)$": "<rootDir>/test/$1"
  }
}
